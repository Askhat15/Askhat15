import sounddevice as sd
import numpy as np

# Устанавливаем параметры аудио
sample_rate = 44100  # частота дискретизации
duration = 5  # длительность записи в секундах

# Чтение аудио с микрофона
audio_data = sd.rec(int(sample_rate * duration), samplerate=sample_rate, channels=1, dtype='int16')
sd.wait()

# Преобразование данных в одномерный массив numpy
audio_data = np.squeeze(audio_data)

# Рассчитываем уровень шума
rms_value = np.sqrt(np.mean(audio_data ** 2))

print(f"Среднеквадратичное значение (RMS) уровня шума: {rms_value}")
